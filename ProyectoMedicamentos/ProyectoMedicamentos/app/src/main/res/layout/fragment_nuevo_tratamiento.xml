<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_fondo"
    tools:context=".ui.fragments.NuevoTratamientoFragment">

    <RelativeLayout
        android:id="@+id/rlPadre"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/azul_encabezado">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="Tratamiento"
                android:textColor="@color/blanco"
                android:textSize="25sp" />

            <RelativeLayout
                android:id="@+id/rlGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_save" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative1">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="Doctor:"
                android:textColor="@color/agua"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvNombreDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/rlAgregarDoctor"
                android:layout_toRightOf="@id/text2"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/blanco"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/rlAgregarDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/boton_sin_doctor">

                <ImageView
                    android:id="@+id/ivIconoDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_person_add" />
            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/relative2"
            android:background="@color/colorPrimaryDark" />

        <RelativeLayout
            android:id="@+id/rlAgregarMedicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1">


            <TextView
                android:id="@+id/tvNuevoMedicamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Medicamentos:"
                android:textColor="@color/agua"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_add" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlAgregarMedicamento">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMedicamentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>